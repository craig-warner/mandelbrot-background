    <kudo>ModernToolkit</kudo>
    <kudo>Notifications</kudo>
  </kudos>

  <url type="bugtracker">https://github.com/craig-warner/mandelbrot-background/issues</url>
  <url type="homepage">https://github.com/craig-warner/mandelbrot-background</url>

  <!-- Generate the oars rating at: https://hughsie.github.io/oars/generate.html -->
